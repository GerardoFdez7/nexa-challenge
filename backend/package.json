{
  "name": "nexa-api",
  "version": "0.0.1",
  "description": "API backend para la plataforma de banca digital de Nexa. Implementa la lógica de negocio para la gestión de clientes, cuentas, productos y el procesamiento de transacciones (Crédito/Débito) con validación de saldo y estatus de cuenta.",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "20 || 22 || 24"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "lint": "npm run eslint && npm run prettier:check",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run rebuild",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -t nexa-api .",
    "docker:run": "docker run -p 3001:3001 -d nexa-api",
    "premigrate": "npm run build",
    "migrate": "node ./dist/migrate",
    "preopenapi-spec": "npm run build",
    "openapi-spec": "node ./dist/openapi-spec",
    "prestart": "npm run build && npx prisma migrate deploy && npx prisma generate",
    "start": "node -r source-map-support/register .",
    "start:dev": "npm run build && npm start",
    "docker": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "lb-clean dist *.tsbuildinfo .eslintcache",
    "rebuild": "npm run clean && npm run build",
    "db:seed": "npx ts-node prisma/seed.ts"
  },

  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "GerardoFdez <101151869+GerardoFdez7@users.noreply.github.com>",
  "license": "",
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/boot": "^8.0.5",
    "@loopback/core": "^7.0.4",
    "@loopback/repository": "^8.0.4",
    "@loopback/rest": "^15.0.5",
    "@loopback/rest-explorer": "^8.0.5",
    "@prisma/client": "^6.17.1",
    "mysql2": "^3.15.2",
    "prisma": "^6.17.1",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@loopback/build": "^12.0.4",
    "@loopback/eslint-config": "^16.0.1",
    "@loopback/testlab": "^8.0.4",
    "@types/node": "^16.18.126",
    "eslint": "^8.57.1",
    "prisma-erd-generator": "^2.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.2.2"
  }
}
